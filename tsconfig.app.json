{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "types": ["svelte", "vite/client"],
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@types/*": ["./types/*"],
      "$assets/*": ["./src/assets/*"],
      "$data/*": ["./src/data/*"],
      "$lib/*": ["./src/lib/*"]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "types/vite-env.d.ts"]
}
